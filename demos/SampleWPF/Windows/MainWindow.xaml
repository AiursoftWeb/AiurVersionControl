<fw:AcrylicWindow x:Class="AiurVersionControl.SampleWPF.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        mc:Ignorable="d"
        xmlns:windows="clr-namespace:AiurVersionControl.SampleWPF.Windows"
        xmlns:cp="clr-namespace:AiurVersionControl.SampleWPF.Components"
        Title="VersionControlled CRUD Demo App"
        x:ClassModifier="internal"
        d:DataContext="{d:DesignInstance windows:MainWindowPresenter}" Width="800" Height="400">
    <DockPanel>
        <DockPanel Width="330" DockPanel.Dock="Left">
            <GroupBox Margin="5,5,5,5" Header="Book database" BorderThickness="1">
                <cp:BooksCRUD DataContext="{Binding CrudPresenter}" />
            </GroupBox>
        </DockPanel>

        <DockPanel>
            <GroupBox DockPanel.Dock="Bottom" Header="Attach to a remote server" Margin="5,5,5,5">
                <cp:RemoteManagement DataContext="{Binding RemotesPresenter}"></cp:RemoteManagement>
            </GroupBox>
            <GroupBox Header="Commits host" Margin="5,5,5,0">
                <cp:CommitsManagement DataContext="{Binding CommitsPresenter}" />
            </GroupBox>
        </DockPanel>
    </DockPanel>

</fw:AcrylicWindow>
    