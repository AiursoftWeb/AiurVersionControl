<UserControl x:Class="AiurVersionControl.SampleWPF.Views.BooksCRUD"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:AiurVersionControl.SampleWPF.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewModels:BooksCRUDPresenter}" x:ClassModifier="internal">

    <FrameworkElement.Resources>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="5,5,5,0" />
        </Style>
    </FrameworkElement.Resources>
    <StackPanel Orientation="Horizontal">
        <StackPanel FocusManager.FocusedElement="{Binding ElementName=NewTitle}" Margin="15">

            <Label Content="New book title" Target="{Binding ElementName=NewTitle}" />
            <TextBox Name="NewTitle" Text="{Binding NewTitle, UpdateSourceTrigger=PropertyChanged}"  Margin="5" />

            <Button Content="Add a new book"
                Command="{Binding CommitAddNew}"
                IsDefault="True"
                Margin="5" />

            <Label Content="Books" Target="{Binding ElementName=Books}" />
            <ListBox Name="Books"
                 ItemsSource="{Binding Repository}"
                 MinWidth="300"
                 Height="300"
                 Margin="5">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="240" />
                                <ColumnDefinition Width="60" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Title}" />
                            <TextBlock Grid.Column="1" Text="{Binding Id}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

        </StackPanel>

        <StackPanel Margin="15" MinWidth="300">
            <Label Content="Commits History" Target="{Binding ElementName=History}" />
            <ListBox Name="History"
                 ItemsSource="{Binding History}"
                 Height="300"
                 Margin="5">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="240" />
                                <ColumnDefinition Width="140" />
                                <ColumnDefinition Width="140" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Id}" />
                            <TextBlock Grid.Column="1" Text="{Binding CommitTime}" />
                            <TextBlock Grid.Column="2" Text="{Binding}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

    </StackPanel>

</UserControl>